---
// src/layouts/Layout.astro
const { title } = Astro.props;
---
<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <title>{title}</title>
  </head>
  <body>
    <header style="background: #fdf2f8; padding: 20px; border-bottom: 2px solid #f9a8d4;">
      <h1 style="color: #be185d;">✨ 私のスキンケア手帖</h1>
      <nav>
        <a href="/">ホーム</a> | <a href="/blog">記事一覧</a>
      </nav>
    </header>

    <main style="max-width: 800px; margin: 0 auto; padding: 20px;">
      <slot /> </main>

    <footer style="text-align: center; margin-top: 50px; padding: 20px; color: #666;">
      <p>&copy; 2026 スキンケアブログ</p>
    </footer>
  </body>
</html>