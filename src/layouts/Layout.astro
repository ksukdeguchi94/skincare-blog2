---
// src/layouts/Layout.astro
const { title } = Astro.props;
---
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <title>{title}</title>
  </head>
  <body class="bg-slate-50 text-slate-900 font-sans antialiased">
    <header class="sticky top-0 z-50 bg-white/80 backdrop-blur-md border-b border-slate-200">
      <div class="max-w-4xl mx-auto px-6 py-4 flex justify-between items-center">
        <h1 class="text-xl font-bold bg-gradient-to-r from-pink-500 to-rose-400 bg-clip-text text-transparent">
          SkinCare Log 2026
        </h1>
        <nav class="space-x-6 text-sm font-medium text-slate-600">
          <a href="/" class="hover:text-pink-500 transition">Home</a>
          <a href="/blog" class="hover:text-pink-500 transition">Reviews</a>
        </nav>
      </div>
    </header>

    <main class="max-w-4xl mx-auto px-6 py-12">
      <div class="bg-white rounded-2xl shadow-sm border border-slate-100 p-8 md:p-12">
        <slot />
      </div>
    </main>

    <footer class="text-center py-10 text-slate-400 text-sm">
      <p>&copy; 2026 SkinCare Log. Built with Astro & Cloudflare.</p>
    </footer>
  </body>
</html>