---
import Layout from '../layouts/Layout.astro';
---

<Layout>
  <section class="relative h-[80vh] md:h-[90vh] bg-[#e5e1da] flex items-center overflow-hidden">
    <div class="max-w-7xl mx-auto px-4 md:px-8 w-full grid md:grid-cols-2 items-center gap-12">
      <div class="z-10 text-white md:text-black">
        <p class="text-xs uppercase tracking-[0.3em] mb-4">Pure Skin, Pure Soul</p>
        <h2 class="text-4xl md:text-6xl font-light leading-tight mb-8">Highly Effective<br/>Body Care</h2>
        <button class="border-b border-black pb-2 text-sm uppercase tracking-widest hover:opacity-50 transition">
          View More
        </button>
      </div>
      <div class="absolute inset-0 md:relative md:inset-auto h-full w-full">
        <img src="/hero-image.jpg" class="w-full h-full object-cover" alt="Hero" />
      </div>
    </div>
  </section>

  <section class="max-w-7xl mx-auto px-4 md:px-8 py-24">
    <div class="flex justify-between items-end mb-12">
      <h3 class="text-2xl font-light">Supremely Skin Purification</h3>
      <a href="#" class="text-xs border-b border-black pb-1">All Products</a>
    </div>
    
    <div class="grid grid-cols-2 md:grid-cols-4 gap-x-4 gap-y-12">
      {[1, 2, 3, 4].map((i) => (
        <div class="group cursor-pointer">
          <div class="aspect-[3/4] bg-gray-50 mb-4 overflow-hidden">
            <img src={`/product-${i}.jpg`} class="w-full h-full object-cover group-hover:scale-105 transition duration-700" />
          </div>
          <h4 class="text-sm mb-1 font-medium">Luminance Essence</h4>
          <p class="text-xs text-gray-500 mb-2">Moisturizer</p>
          <p class="text-sm">$58</p>
        </div>
      ))}
    </div>
  </section>

  <section class="bg-[#f2f1ee] py-24 px-4">
    <div class="max-w-4xl mx-auto text-center">
      <h3 class="text-3xl font-light mb-12 italic">Our Journal</h3>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-2">
        <div class="aspect-square bg-white"><img src="/j1.jpg" class="w-full h-full object-cover"/></div>
        <div class="aspect-square bg-white"><img src="/j2.jpg" class="w-full h-full object-cover"/></div>
        <div class="aspect-square bg-white"><img src="/j3.jpg" class="w-full h-full object-cover"/></div>
        <div class="aspect-square bg-white"><img src="/j4.jpg" class="w-full h-full object-cover"/></div>
      </div>
    </div>
  </section>
</Layout>